

<div class="banner">
	<div class="banner-text">
		<h1> Empleo Abierto </h1>
		<h2> Empleo Abierto es una plataforma </h2>
		<h2> que te permite encontrar trabajo en instituciones de gobierno </h2>
		<h2>de manera facil y rapida </h2>
	</div>
</div>

<div class="container">
	<div class="row" id="filter-search">
	  <div class="col-md-4">
	    <input type="text" class="form-control" id="exampleInput1" placeholder="Tipo de empleo">
	  </div>
	  <div class="col-md-4">
	    <input type="text" class="form-control" id="exampleInput2" placeholder="Institucion">
	  </div>
	  <div class="col-md-3">
	    <input type="text" class="form-control" id="exampleInput3" placeholder="Salario">
	  </div>
	  <div class="col-md-1">
	  	<button type="submit" class="btn btn-default" >Buscar</button>
	  </div>
	</div>
</div>

<div class="container">
	<table class="table table-bordered table-striped">
		<tr>
			<th width: auto>Puesto</th>
			<th width: auto>Institucion</th>
			<th width: auto>Salario</th>
			<th width: auto>Telefono</th>
		</tr>
		<% @jobs.each do |job| %>
			<tr>
				<td><%= job.name %></td>
				<td><%= job.institution.name%></td>
				<td><%= number_to_currency(job.salary, :unit => "$")%></td> 
				<td><%= job.institution.telephone %></td>
			</tr>
		<% end %>
	</table>
</div>



<div class="text-center">
    <%= paginate @jobs, :window => 2 %>
</div>

